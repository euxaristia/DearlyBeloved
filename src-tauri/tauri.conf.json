{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Common Prayer",
  "version": "0.1.0",
  "identifier": "com.prexcommunis.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": null,
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "Common Prayer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
